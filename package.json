{
  "name": "mcode_cql",
  "version": "0.1.0",
  "description": "mCODE CQL library",
  "directories": {
    "test": "test"
  },
  "jest": {
    "verbose": true
  },
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"./**/*.js\" --fix",
    "prettier": "prettier --check \"**/*.js\"",
    "prettier:fix": "prettier --write \"**/*.js\"",
    "test": "./testing-harness/scripts/run_tests.sh",
    "test:unit": "jest --testPathPattern=test --testPathIgnorePatterns=testing-harness",
    "translate": "node ./testing-harness/scripts/buildElm.js",
    "test:testing-harness": "jest --testPathPattern=./testing-harness/test",
    "translate:testing-harness": "node testing-harness/scripts/buildElm.js testing-harness/test/fixtures/cql testing-harness/test/fixtures/elm",
    "translate:tests": "node testing-harness/scripts/buildElm.js test/fixtures/cql test/fixtures/elm true"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "cql-translation-service-client": "^0.6.0",
    "dotenv": "^8.2.0",
    "cql-exec-fhir": "^2.0.0",
    "cql-execution": "^2.2.0"
  }
}
